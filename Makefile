#########################################
#                LIB NAME               #
#########################################

PUSH_SWAP = push_swap.a
LIBFT = libft/libft.a

#########################################
#              COMPILATOR               #
#########################################

CC = gcc

#########################################
#           COMPILATOR FLAGS            #
#########################################

FLAGS = -Wall -Wextra -Werror

#########################################
#           LIB FUNCTIONS               #
#########################################

SRC = a_movements.c b_movements.c double_movements.c push_swap.c \

SRCBONUS =
#########################################
#              LIB INDEX                #
#########################################

AR =  ar -curs

#########################################
#               OBJECTS                 #
#########################################

OBJ = $(SRC:.c=.o)

OBJBONUS = $(SRCBONUS:.c=.o)

#########################################
#            CLEAN FUNCTION             #
#########################################

CLEAN = rm -rf

#########################################
#              COMPILE ALL              #
#########################################

all: $(PUSH_SWAP) $(LIBFT)
$(PUSH_SWAP) : $(OBJ)
	@$(AR) $(PUSH_SWAP) $(OBJ) $(LIBFT)

#########################################
#             COMPILE BONUS             #
#########################################

bonus :$(OBJBONUS)
	@$(AR) $(PUSH_SWAP) $(OBJBONUS) $(LIBFT)

#########################################
#           COMPILE .c to .o            #
#########################################

%.o: %.c
	@echo "compilando archivos"
	@$(CC) $(FLAGS) -c -o $@ $<

#########################################
#              DELETE .o                #
#########################################

clean:
	@$(CLEAN) $(OBJ) $(OBJBONUS)

#########################################
#              DELETE ALL               #
#########################################
fclean : clean
	@$(CLEAN) $(NAME)

#########################################
#         DELETE ALL & REMAKE           #
#########################################

re: fclean all


.PHONY: all bonus re clean fclean